doctype html
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title=tittel
        link(rel='stylesheet' href='/assets/styles/main.css')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.5.1/css/pikaday.min.css')

        script(src="https://use.typekit.net/qsq4ljb.js")
        script.
            try{Typekit.load({ async: true });}catch(e){}
            
        script.
            var lb = document.getElementById('load-bar');
            var w = 0;
            var interval = setInterval(function(){
                w += 3;
                console.log(w);


                if (document.readyState == 'complete') {
                    clearInterval(interval);
                    document.getElementById('load-bar').style.opacity = 0;
                    document.getElementById('load-bg').style.opacity = 0;
                    setTimeout(function() {
                        document.getElementById('load-bar').style.display = 'none';
                        document.getElementById('load-bg').style.display = 'none';
                    }, 1000)
                    
                }
            }, 100)
        style.
            body {transition: .5s all ease;}
            #load-bar{
                width: 50px;
                margin: 49vh auto;
                transition: .33s 0s opacity ease;
                z-index: 100;
                opacity: 1;
            }
            #load-bg{
                width: 100%; 
                height: 100%; 
                background: #58a6b5; 
                z-index: 99; 
                position: fixed; 
                opacity: 1; 
                transition: .33s 0s all ease;
            } 
            @keyframes key {
                0% {opacity: 0;}
                25% {opacity: 1;}
                50% {opacity: 0;}
                75% {opacity: 1;}
                100% {opacity: 0;}
            }
            .l-dot {
                width: 10px;
                height: 10px;
                background: gray;
                border-radius: 100%;
                margin: 0 3px; display: inline-block;
                animation: key 5s infinite ease-in-out;
            }
            .l-dot:nth-child(2) {animation-delay: .333s}
            .l-dot:last-child {animation-delay: .666s}
            
    body
        #load-bar
            .l-dot
            .l-dot
            .l-dot
        #load-bg
            
        .main-content
            include ../partials/header

            #actual-content
                block content

        
        include ../partials/navbar

        block scripts